// papogen.css - Elements/Divider

mixin divider(obj)
    - var className = "divider"
    - if (obj.attr.cleared != undefined)
        - if (obj.attr.cleared)
            - className += " divider-cleared"
    - if (obj.attr.section != undefined)
        - if (obj.attr.section)
            - className += " divider-section"
    - if (obj.attr.compact != undefined)
        - if (obj.attr.compact)
            - className += " divider-compact"
    - if (obj.attr.inverted != undefined)
        - if (obj.attr.inverted)
            - className += " divider-inverted"
    div(class=className)
    
// papogen.css - Elements/Header

mixin header_mixin(data, attr)
    - if (typeof attr.icon !== undefined && typeof attr.img === undefined)
        - if (typeof attr.icon !== undefined)
            - var icon_obj = { data: attr.icon, attr: {} }
            +icon(icon_obj)
        - if (typeof data !== undefined)
        div(class="hdr-content") #{data}
            - if (typeof attr.sub !== undefined)
            div(class="hdr hdr-sub") #{attr.sub}
    - if (typeof attr.icon === undefined && typeof attr.img !== undefined)
        - if (typeof attr.img !== undefined)
        img(src=attr.img)
        - if (typeof data !== undefined)
        div(class="hdr-content") #{data}
            - if (typeof attr.sub !== undefined)
            div(class="hdr hdr-sub") #{attr.sub}
    - if (typeof attr.icon === undefined && typeof attr.img === undefined)
    div(class="hdr-content") #{data}
        - if (typeof attr.sub !== undefined)
        div(class="hdr hdr-sub") #{attr.sub}

mixin header(obj)
    - var className = "hdr"
    - if (typeof obj.attr.color !== undefined)
        - if (obj.attr.color == "red" || obj.attr.color == "orange" || obj.attr.color == "yellow" || obj.attr.color == "green" || obj.attr.color == "blue" || obj.attr.color == "navy" || obj.attr.color == "purple" || obj.attr.color == "pink" || obj.attr.color == "brown" || obj.attr.color == "grey")
            - className = className + " hdr-" + obj.attr.color
    - if (typeof obj.attr.inverted !== undefined)
        - if (obj.attr.inverted)
            - className += " hdr-inverted"
    - if (typeof obj.attr.aligned !== undefined)
        - if (obj.attr.aligned == "right" || obj.attr.aligned == "left" || obj.attr.aligned == "center" || obj.attr.aligned == "justified")
            - className = className + " hdr-aligned-" + obj.attr.aligned
    - if (typeof obj.attr.floated !== undefined)
        - if (obj.attr.floated == "right" || obj.attr.floated == "left")
            - className = className + " hdr-floated-" + obj.attr.floated
    - if (typeof obj.attr.block !== undefined)
        - if (obj.attr.block)
            - className += " hdr-block"
    - if (typeof obj.attr.divided !== undefined)
        - if (obj.attr.divided)
            - className += " hdr-divided"
    - if (typeof obj.attr.size !== undefined)
        case obj.attr.size
            when "h1"
                h1(class=className)
                    +header_mixin(obj.data, obj.attr)
            when "h2"
                h2(class=className)
                    +header_mixin(obj.data, obj.attr)
            when "h3"
                h3(class=className)
                    +header_mixin(obj.data, obj.attr)
            when "h4"
                h4(class=className)
                    +header_mixin(obj.data, obj.attr)
            when "h5"
                h5(class=className)
                    +header_mixin(obj.data, obj.attr)
            when "h6"
                h6(class=className)
                    +header_mixin(obj.data, obj.attr)